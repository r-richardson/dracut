+    # fi
 
     "$testdir"/run-qemu \
         "${disk_args[@]}" \
@@ -175,7 +177,7 @@ test_nfsv3() {
         52:54:00:12:34:05 "root=dhcp" 192.168.50.1 wsize=4096 || return 1
 
     client_test "NFSv3 Bridge Customized root=dhcp DHCP path,options" \
