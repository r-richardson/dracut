@@ -45,7 +47,7 @@ run_server() {
     if ! [[ $SERIAL ]]; then
         while ! grep -q Serving "$TESTDIR"/server.log; do
             echo "Waiting for the server to startup"
-            sleep 1
+            sleep 4
         done
     else
         echo Sleeping 10 seconds to give the server a head start
